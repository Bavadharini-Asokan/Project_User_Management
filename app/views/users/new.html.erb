<div class="container" style="width:500px;margin-top:50px;">
  <%= form_with model: @user, scope: :user, class:'form-group',controller: 'users', action:'create', method: :post, local: true do |form| %>
  <% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li style="color:red;"><%= msg %></li>
        <% end %>
      </ul>
  <% end %>
    <%= form.label :first_name, class: 'form-label' %></br></br>
    <%= form.text_field :first_name, class:"form-control"  %></br></br>
    <%= form.label :last_name, class: 'form-label' %></br></br>
    <%= form.text_field :last_name, class:"form-control"  %></br></br>
    <%= form.label :department, class: 'form-label' %></br></br>
    <%= form.collection_select :department_id, Department.order(:department_name), :id, :department_name, {}, { class: "form-control" } %></br></br>
    <center>
    <%= form.submit 'Add User', class: 'btn btn-primary buttons_style' %>
    <%= link_to "<button class='btn btn-primary buttons_style'>Back</button>".html_safe, users_path %>
    </center>
  <% end %>
</div>
<style>
  .buttons_style{
    width:100px;
    background-color: white;
    border-color: #007bff;
    padding-left:10px;
    margin-left:10px;
    margin-top:10px;
    color: #007bff;
  }
  .buttons_style:hover{
    background-color: #007bff;
  }
</style>
