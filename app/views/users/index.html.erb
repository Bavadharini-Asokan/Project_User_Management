<div class="container" style="margin-top:50px;">
<h2 class="pull-left" style="color:#007bff">Users</h2>
<%= link_to "<button class='btn btn-primary pull-right' style='width:100px;background-color: #007bff;border-color: #007bff;margin-left:10px;'>Add User</button>".html_safe, new_user_path %>
<%= link_to "<button class='btn btn-primary pull-right' style='width:100px;background-color: #007bff;border-color: #007bff;'>Home</button>".html_safe, welcome_index_path %>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Department</th>
      <th>Action</th>
    </tr>
  </thead>
  <% @user.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.department_name %></td>
      <td><%= link_to "<button class='btn btn-primary' style='width:60px;background-color: #007bff;border-color: #007bff;'>View</button>".html_safe, user_path(:department => user.department_name,:id => user.id)%>
    </tr>
  <% end %>
</table>
</div>

</div>
