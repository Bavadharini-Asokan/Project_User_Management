<div class="container" style="width:500px;margin-top:50px;">
  <%= form_with model: @project, scope: :project, class:'form-group',controller: 'projects', action:'create', method: :post, local: true do |form| %>
    <%= form.label :project_name, class: 'form-label' %></br></br>
    <%= form.text_field :project_name, class:"form-control"  %></br></br>
    <%= form.label :department, class: 'form-label' %></br></br>
    <%= form.collection_select :department_id, Department.order(:department_name), :id, :department_name, {}, { class: "form-control" } %></br></br>
    <center>
    <%= form.submit 'Add Project', class: 'btn btn-primary', style:'width:100px;background-color: #007bff;border-color: #007bff;' %>
    <%= link_to "<button class='btn btn-primary' style='width:80px;background-color: #007bff;border-color: #007bff;'>Back</button>".html_safe, projects_path %>
    </center>
  <% end %>
</div>
