<div class="container" style="margin-top:50px;">
<h2 class="pull-left" style="color:#007bff">Projects</h2>
<%= link_to "<button class='btn btn-primary pull-right' style='width:100px;background-color: #007bff;border-color: #007bff;margin-left:10px;'>Add Project</button>".html_safe, new_project_path %>
<%= link_to "<button class='btn btn-primary pull-right' style='width:100px;background-color: #007bff;border-color: #007bff;'>Home</button>".html_safe, welcome_index_path %></br></br>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Project</th>
      <th>Department</th>
      <th>Action</th>
    </tr>
  </thead>
  <% @project.each do |project| %>
    <tr>
      <td><%= project.project_name %></td>
      <td><%= project.department_name %></td>
      <td><%= link_to "<button class='btn btn-primary' style='width:60px;background-color: #007bff;border-color: #007bff;'>View</button>".html_safe, project_path(:department => project.department_name,:id => project.id)%>
    </tr>
  <% end %>
</table>
</div>
