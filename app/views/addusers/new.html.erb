<div class="container" style="width:500px;margin-top:50px;">
   <%= form_with model: @projects_user, scope: :projects_user, class:'form-group',url: addusers_path, local: true do |form| %>
<%= form.hidden_field :project_id, :value => @projectid %>
   <%= form.label :select_user, class: 'form-label' %></br></br>
   <%= form.collection_select :user_id, User.order(:first_name), :id, :first_name, {}, { class: "form-control" } %></br></br>
     <center>
       <%= form.submit 'Add', class: 'btn btn-primary buttons_style' %>
       <%= link_to "<button class='btn btn-primary buttons_style'>Back</button>".html_safe, project_path(:id => @projectid, :department => @department) %>
     </center>
   <% end %>
</div>

<style>
  .buttons_style{
    width:110px;
    background-color: white;
    border-color: #007bff;
    margin-left:10px;
    color: #007bff;
  }
  .buttons_style:hover{
    background-color: #007bff;
  }
</style>
